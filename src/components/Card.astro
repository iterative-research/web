---
interface Props {
  title: string;
  body: string;
  exaggerate?: string;
  index?: string;
  filename?: string;
}

const { title, body, exaggerate, index = "01", filename = "module.ts" } = Astro.props;
---

<li class="service-card group">
  <!-- Terminal chrome -->
  <div class="card-chrome">
    <div class="chrome-dots">
      <span class="dot dot-close"></span>
      <span class="dot dot-min"></span>
      <span class="dot dot-max"></span>
    </div>
    <div class="chrome-tab">
      <span class="tab-icon">{'//>'}</span>
      <span>{filename}</span>
    </div>
  </div>
  <!-- Card body -->
  <div class="card-body">
    <div class="card-index font-mono">{index}</div>
    <h3 class="card-title">{title}</h3>
    <p class="card-text">
      {body}{exaggerate && <strong class="card-exaggerate">{" "}{exaggerate}</strong>}
    </p>
    <div class="card-line" aria-hidden="true"></div>
  </div>
</li>

<style>
  .service-card {
    list-style: none;
    position: relative;
    background: var(--surface);
    border: 1px solid var(--surface-border);
    border-radius: 8px;
    overflow: hidden;
    transition: border-color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
  }

  .service-card:hover {
    border-color: var(--red-dim);
    transform: translateY(-2px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4), 0 0 0 1px var(--red-dim);
  }

  .card-chrome {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.625rem 0.875rem;
    border-bottom: 1px solid var(--surface-border);
    background: rgba(255, 255, 255, 0.02);
  }

  .chrome-dots {
    display: flex;
    gap: 5px;
  }

  .dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--text-dim);
    opacity: 0.5;
    transition: opacity 0.2s;
  }

  .service-card:hover .dot-close { background: #ef4444; opacity: 1; }
  .service-card:hover .dot-min { background: #eab308; opacity: 1; }
  .service-card:hover .dot-max { background: #22c55e; opacity: 1; }

  .chrome-tab {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-family: 'Geist Mono', monospace;
    font-size: 0.7rem;
    color: var(--text-dim);
    letter-spacing: 0.02em;
  }

  .tab-icon {
    color: var(--red);
    font-weight: 600;
  }

  .card-body {
    padding: 1.5rem;
  }

  .card-index {
    font-size: 0.7rem;
    color: var(--red);
    letter-spacing: 0.1em;
    margin-bottom: 0.75rem;
    font-weight: 500;
  }

  .card-title {
    font-size: 1.15rem;
    font-weight: 700;
    color: var(--text);
    margin: 0 0 0.625rem 0;
    line-height: 1.3;
  }

  .card-text {
    font-size: 0.875rem;
    line-height: 1.6;
    color: var(--text-muted);
    margin: 0;
  }

  .card-exaggerate {
    color: var(--red);
    font-style: italic;
  }

  .card-line {
    margin-top: 1.25rem;
    height: 1px;
    background: linear-gradient(90deg, var(--red), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .service-card:hover .card-line {
    opacity: 0.5;
  }
</style>
