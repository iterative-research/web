---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Iterative Research — Predictable Solutions">

  <!-- ─── NAV ─── -->
  <nav class="nav animate-fade-in-up">
    <a href="/" class="nav-logo" aria-label="Iterative Research Home">
      <picture>
        <source srcset="logo.webp" type="image/webp" />
        <source srcset="logo.png" type="image/png" />
        <img src="logo.png" alt="Iterative Research" class="nav-logo-img" />
      </picture>
    </a>
    <div class="nav-right">
      <a href="#services" class="nav-link font-mono">services</a>
      <a href="mailto:contact@iterative.ca" class="nav-cta">
        <span class="nav-cta-dot" aria-hidden="true"></span>
        Contact us
      </a>
    </div>
  </nav>

  <!-- ─── HERO ─── -->
  <main>
    <section class="hero" aria-label="Hero">
      <div class="hero-logo-wrap animate-fade-in-up animate-delay-1">
        <picture>
          <source srcset="logo.webp" type="image/webp" />
          <source srcset="logo.png" type="image/png" />
          <img src="logo.png" alt="" class="hero-logo" aria-hidden="true" />
        </picture>
        <div class="hero-logo-tagline font-mono">research</div>
      </div>

      <div class="hero-content">
        <div class="hero-left animate-fade-in-up animate-delay-3">
          <h1 class="hero-title">
            Turning hard problems into <span class="hero-accent">predictable<span class="cursor" aria-hidden="true"></span></span> solutions
          </h1>
          <p class="hero-sub">
            We transform complex and uncertain engineering challenges into
            guaranteed, measurable outcomes through rigorous experimentation
            and systematic methodology.
          </p>
          <div class="hero-actions">
            <a href="mailto:contact@iterative.ca" class="btn-primary">
              Start a conversation
              <span aria-hidden="true">&rarr;</span>
            </a>
            <a href="#services" class="btn-ghost">
              Our services
            </a>
          </div>
        </div>

        <div class="hero-right animate-fade-in-up animate-delay-5">
          <!-- Mini terminal -->
          <div class="terminal-window">
            <div class="terminal-chrome">
              <div class="t-dots">
                <span class="t-dot" style="background: #ef4444"></span>
                <span class="t-dot" style="background: #eab308"></span>
                <span class="t-dot" style="background: #22c55e"></span>
              </div>
              <span class="t-title font-mono">iterative-process.sh</span>
            </div>
            <div class="terminal-body font-mono">
              <div class="t-line" style="--line-delay: 0.0s">
                <span class="t-prompt">$</span>
                <span class="t-cmd">iterative init --mode=discovery</span>
              </div>
              <div class="t-line" style="--line-delay: 0.3s">
                <span class="t-out">&rarr; Analyzing problem space...</span>
              </div>
              <div class="t-line" style="--line-delay: 0.6s">
                <span class="t-out">&rarr; Mapping uncertainty boundaries...</span>
              </div>
              <div class="t-line" style="--line-delay: 0.9s">
                <span class="t-prompt">$</span>
                <span class="t-cmd">iterative run --experiments</span>
              </div>
              <div class="t-line" style="--line-delay: 1.2s">
                <span class="t-out">&rarr; Running controlled experiments...</span>
              </div>
              <div class="t-line" style="--line-delay: 1.5s">
                <span class="t-out">&rarr; Converging on optimal solution...</span>
              </div>
              <div class="t-line" style="--line-delay: 1.8s">
                <span class="t-success">&#10003; Solution delivered. Risk eliminated.</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- ─── SERVICES ─── -->
    <section class="services-section" id="services" aria-label="Services">
      <div class="services-header">
        <div class="section-label font-mono">
          <span class="label-dot" aria-hidden="true"></span>
          services
        </div>
        <h2 class="section-title">What we do</h2>
      </div>

      <ul class="services-grid" role="list">
        <Card
          title="Experimental Development"
          body="Transform complex and uncertain software engineering projects into guaranteed, predictable outcomes by letting us take the lead"
          exaggerate="...and the risk."
          index="01"
          filename="experiment.ts"
        />
        <Card
          title="Optimized Outcomes"
          body="Leverage cutting-edge experimentation techniques for conversion rate optimization, recommender systems, business model innovation, or any other learning-while-earning challenges."
          index="02"
          filename="optimize.ts"
        />
        <Card
          title="Engineering Excellence"
          body="Bring your software engineering operations to the next level with our expert strategic guidance — team performance, effective, joyful process, and industry-leading quality automation."
          index="03"
          filename="engineer.ts"
        />
        <Card
          title="Systematic Review"
          body="Comprehensive reviews and insights for diligence, for management, or just external eyes for technical leads to help understand, document and improve your software engineering operations — code, security, architecture, or processes."
          index="04"
          filename="review.ts"
        />
      </ul>
    </section>

    <!-- ─── CTA ─── -->
    <section class="cta-section" aria-label="Contact">
      <div class="cta-box">
        <div class="cta-prompt font-mono" aria-hidden="true">
          <span class="cta-chevron">&gt;</span> ready_to_start
        </div>
        <h2 class="cta-title">
          Have an uncertainty to explore?
        </h2>
        <p class="cta-text">
          Whether it's an experiment, data-driven optimization, or software engineering
          challenge — we're here to help turn it into a predictable outcome.
        </p>
        <a href="mailto:contact@iterative.ca" class="btn-primary btn-lg">
          contact@iterative.ca
          <span aria-hidden="true">&rarr;</span>
        </a>
      </div>
    </section>
  </main>

  <!-- ─── VSCODE STATUS BAR ─── -->
  <footer class="vscode-bar font-mono" role="contentinfo">
    <div class="vscode-left">
      <div class="vscode-segment vscode-remote">
        <svg width="14" height="14" viewBox="0 0 16 16" fill="none" aria-hidden="true">
          <path d="M14.12 9.87L12.24 8l1.88-1.87a.5.5 0 000-.71l-3.54-3.54a.5.5 0 00-.71 0L8 3.76 6.13 1.88a.5.5 0 00-.71 0L1.88 5.42a.5.5 0 000 .71L3.76 8l-1.88 1.87a.5.5 0 000 .71l3.54 3.54a.5.5 0 00.71 0L8 12.24l1.87 1.88a.5.5 0 00.71 0l3.54-3.54a.5.5 0 000-.71z" fill="currentColor"/>
        </svg>
      </div>
      <div class="vscode-segment vscode-branch">
        <svg width="12" height="12" viewBox="0 0 16 16" fill="none" aria-hidden="true">
          <path d="M11.75 5a1.75 1.75 0 10-1.5 1.732v1.018a.25.25 0 01-.25.25H6a.25.25 0 01-.25-.25V6.732a1.75 1.75 0 10-1.5 0v2.536a1.75 1.75 0 101.5 0V8.25A1.75 1.75 0 007.5 10h2.5a1.75 1.75 0 001.75-1.75V6.732A1.75 1.75 0 0011.75 5z" fill="currentColor"/>
        </svg>
        main
      </div>
      <div class="vscode-segment vscode-errors">
        <svg width="12" height="12" viewBox="0 0 16 16" fill="none" aria-hidden="true">
          <path d="M8 1a7 7 0 100 14A7 7 0 008 1zm3.36 9.65a.5.5 0 01-.71.71L8 8.71l-2.65 2.65a.5.5 0 01-.71-.71L7.29 8 4.64 5.35a.5.5 0 01.71-.71L8 7.29l2.65-2.65a.5.5 0 01.71.71L8.71 8l2.65 2.65z" fill="currentColor"/>
        </svg>
        0
        <svg width="12" height="12" viewBox="0 0 16 16" fill="none" aria-hidden="true" style="margin-left: 6px;">
          <path d="M7.56 1.07a.75.75 0 01.88 0l6 4.5a.75.75 0 01-.88 1.22L8 2.85 2.44 6.79a.75.75 0 01-.88-1.22l6-4.5zM7.25 8a.75.75 0 011.5 0v4.25a.75.75 0 01-1.5 0V8z" fill="currentColor"/>
        </svg>
        0
      </div>
    </div>
    <div class="vscode-center">
      &copy; {new Date().getFullYear()} Iterative Research Inc.
    </div>
    <div class="vscode-right">
      <div class="vscode-segment">Ln 1, Col 1</div>
      <div class="vscode-segment">Spaces: 2</div>
      <div class="vscode-segment">UTF-8</div>
      <div class="vscode-segment">TypeScript</div>
      <div class="vscode-segment vscode-bell">
        <svg width="12" height="12" viewBox="0 0 16 16" fill="none" aria-hidden="true">
          <path d="M8 1.5A3.25 3.25 0 004.75 4.75v2.013c0 .58-.179 1.146-.513 1.62l-.91 1.29A1.25 1.25 0 004.35 12h7.3a1.25 1.25 0 001.023-1.327l-.91-1.29a2.75 2.75 0 01-.513-1.62V4.75A3.25 3.25 0 008 1.5zM6.5 13.5a1.5 1.5 0 003 0h-3z" fill="currentColor"/>
        </svg>
      </div>
    </div>
  </footer>

</Layout>

<style>
  /* ─── NAV ─── */
  .nav {
    position: sticky;
    top: 0;
    z-index: 50;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.625rem 1.5rem;
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    background: rgba(9, 9, 11, 0.85);
    border-bottom: 1px solid var(--surface-border);
  }

  .nav-logo-img {
    height: 22px;
    width: auto;
    display: block;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 1.25rem;
  }

  .nav-link {
    font-size: 0.75rem;
    color: var(--text-dim);
    text-decoration: none;
    letter-spacing: 0.04em;
    transition: color 0.2s ease;
  }

  .nav-link:hover {
    color: var(--text-muted);
  }

  .nav-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'Geist Mono', monospace;
    font-size: 0.75rem;
    color: var(--text-muted);
    text-decoration: none;
    padding: 0.375rem 0.875rem;
    border: 1px solid var(--surface-border);
    border-radius: 4px;
    transition: all 0.2s ease;
    letter-spacing: 0.02em;
  }

  .nav-cta:hover {
    color: var(--text);
    border-color: var(--red-dim);
    background: var(--red-glow);
  }

  .nav-cta-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--red);
    animation: blink 2s infinite;
  }

  /* ─── HERO ─── */
  .hero {
    position: relative;
    z-index: 1;
    max-width: 1100px;
    margin: 0 auto;
    padding: 2rem 1.5rem 1.5rem;
  }

  /* Large logo */
  .hero-logo-wrap {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    margin-bottom: 2.5rem;
  }

  .hero-logo {
    display: block;
    width: clamp(320px, 50vw, 560px);
    height: auto;
  }

  .hero-logo-tagline {
    font-size: clamp(1.5rem, 3vw, 2.75rem);
    font-weight: 500;
    color: var(--text-muted);
    letter-spacing: -0.02em;
    transform: translateY(-0.15em);
  }

  /* Two-column hero */
  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    align-items: start;
  }

  .hero-title {
    font-size: clamp(1.5rem, 3vw, 2.25rem);
    font-weight: 800;
    line-height: 1.15;
    letter-spacing: -0.03em;
    margin: 0 0 1rem;
    text-wrap: balance;
  }

  .hero-accent {
    color: var(--red);
    position: relative;
  }

  .cursor {
    display: inline-block;
    width: 2px;
    height: 0.85em;
    background: var(--red);
    margin-left: 2px;
    vertical-align: text-bottom;
    animation: blink 1s step-end infinite;
  }

  .hero-sub {
    font-size: 0.9rem;
    line-height: 1.65;
    color: var(--text-muted);
    margin: 0 0 1.25rem;
  }

  .hero-actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  /* ─── BUTTONS ─── */
  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.6rem 1.25rem;
    background: var(--red);
    color: #fff;
    font-weight: 600;
    font-size: 0.85rem;
    text-decoration: none;
    border-radius: 4px;
    border: none;
    transition: all 0.2s ease;
    letter-spacing: 0.01em;
  }

  .btn-primary:hover {
    background: #b71c25;
    box-shadow: 0 0 24px var(--red-glow);
    transform: translateY(-1px);
  }

  .btn-lg {
    padding: 0.75rem 1.75rem;
    font-size: 0.9rem;
  }

  .btn-ghost {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.6rem 1.25rem;
    color: var(--text-muted);
    font-weight: 500;
    font-size: 0.85rem;
    text-decoration: none;
    border-radius: 4px;
    border: 1px solid var(--surface-border);
    transition: all 0.2s ease;
  }

  .btn-ghost:hover {
    color: var(--text);
    border-color: rgba(255, 255, 255, 0.15);
    background: rgba(255, 255, 255, 0.03);
  }

  /* ─── TERMINAL (inside hero) ─── */
  .terminal-window {
    background: var(--surface);
    border: 1px solid var(--surface-border);
    border-radius: 6px;
    overflow: hidden;
  }

  .terminal-chrome {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    padding: 0.5rem 0.75rem;
    border-bottom: 1px solid var(--surface-border);
    background: rgba(255, 255, 255, 0.02);
  }

  .t-dots {
    display: flex;
    gap: 5px;
  }

  .t-dot {
    width: 7px;
    height: 7px;
    border-radius: 50%;
  }

  .t-title {
    font-size: 0.65rem;
    color: var(--text-dim);
    letter-spacing: 0.02em;
  }

  .terminal-body {
    padding: 0.875rem 1rem;
    font-size: 0.72rem;
    line-height: 1.75;
  }

  .t-line {
    opacity: 0;
    animation: fadeInUp 0.4s ease-out forwards;
    animation-delay: calc(1s + var(--line-delay, 0s));
  }

  .t-prompt {
    color: var(--red);
    margin-right: 0.375rem;
    font-weight: 600;
  }

  .t-cmd {
    color: var(--text);
  }

  .t-out {
    color: var(--text-dim);
    padding-left: 0.875rem;
  }

  .t-success {
    color: #22c55e;
    font-weight: 600;
  }

  /* ─── SERVICES ─── */
  .services-section {
    position: relative;
    z-index: 1;
    max-width: 1100px;
    margin: 0 auto;
    padding: 2rem 1.5rem 2.5rem;
  }

  .services-header {
    margin-bottom: 1.5rem;
  }

  .section-label {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.65rem;
    color: var(--text-dim);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 0.375rem;
  }

  .label-dot {
    width: 5px;
    height: 5px;
    border-radius: 50%;
    background: var(--red);
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0;
    letter-spacing: -0.02em;
    color: var(--text);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    padding: 0;
    margin: 0;
  }

  /* ─── CTA SECTION ─── */
  .cta-section {
    position: relative;
    z-index: 1;
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 1.5rem 6rem;
  }

  .cta-box {
    text-align: center;
    padding: 2.5rem 1.5rem;
    background: var(--surface);
    border: 1px solid var(--surface-border);
    border-radius: 8px;
    position: relative;
    overflow: hidden;
  }

  .cta-box::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 200px;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--red), transparent);
  }

  .cta-prompt {
    font-size: 0.75rem;
    color: var(--text-dim);
    margin-bottom: 1rem;
  }

  .cta-chevron {
    color: var(--red);
    font-weight: 700;
  }

  .cta-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 0.625rem;
    letter-spacing: -0.02em;
    color: var(--text);
  }

  .cta-text {
    font-size: 0.9rem;
    line-height: 1.65;
    color: var(--text-muted);
    max-width: 540px;
    margin: 0 auto 1.5rem;
    text-wrap: balance;
  }

  /* ─── VSCODE STATUS BAR ─── */
  .vscode-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 22px;
    padding: 0 0.5rem;
    font-size: 0.65rem;
    color: #cccccc;
    background: #007acc;
    user-select: none;
  }

  .vscode-left,
  .vscode-right {
    display: flex;
    align-items: center;
    gap: 0;
    height: 100%;
  }

  .vscode-center {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    font-size: 0.6rem;
    color: rgba(255, 255, 255, 0.7);
  }

  .vscode-segment {
    display: flex;
    align-items: center;
    gap: 4px;
    padding: 0 7px;
    height: 100%;
    color: #ffffff;
    transition: background 0.15s ease;
    cursor: default;
    white-space: nowrap;
  }

  .vscode-segment:hover {
    background: rgba(255, 255, 255, 0.12);
  }

  .vscode-remote {
    background: #16825d;
    padding: 0 8px;
  }

  .vscode-remote:hover {
    background: #1a9e6f;
  }

  .vscode-branch svg,
  .vscode-errors svg,
  .vscode-bell svg,
  .vscode-remote svg {
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 1.5rem 1rem 1rem;
    }

    .hero-logo {
      width: clamp(200px, 70vw, 320px);
    }

    .hero-logo-tagline {
      font-size: 1.25rem;
    }

    .hero-content {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .hero-title {
      font-size: 1.5rem;
    }

    .nav {
      padding: 0.5rem 1rem;
    }

    .services-section,
    .cta-section {
      padding-left: 1rem;
      padding-right: 1rem;
    }

    .services-grid {
      grid-template-columns: 1fr;
    }

    .cta-box {
      padding: 2rem 1rem;
    }

    .vscode-center {
      display: none;
    }

    .vscode-right .vscode-segment:not(.vscode-bell) {
      display: none;
    }
  }
</style>

<script>
  // Intersection Observer for scroll-triggered animations
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
          observer.unobserve(entry.target);
        }
      });
    },
    { threshold: 0.1, rootMargin: '0px 0px -30px 0px' }
  );

  document.querySelectorAll('.services-grid li, .cta-section').forEach((el) => {
    el.classList.add('scroll-reveal');
    observer.observe(el);
  });
</script>
